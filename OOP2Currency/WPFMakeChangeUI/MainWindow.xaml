<Window x:Class="WPFMakeChangeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMakeChangeUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="428.432" Width="431.863">
    <Grid>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="175,367,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.027,0.149" Click="btnSave_Click"/>
        <Label x:Name="lblAmount" Content="Amount:" HorizontalAlignment="Left" Margin="46,40,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBox x:Name="txtboxAmount" HorizontalAlignment="Left" Height="23" Margin="130,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnChange" Content="Make Change" HorizontalAlignment="Left" Margin="281,46,0,0" VerticalAlignment="Top" Width="88" Click="btnChange_Click"/>
        <ListBox HorizontalAlignment="Left" Height="290" Margin="10,72,0,0" VerticalAlignment="Top" Width="404" ItemsSource="{Binding Coins}"/>
    </Grid>
</Window>
